{
  "compilerOptions": { 
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",  
    "types": ["webpack-env", "node"],
    "lib": ["ES2015", "DOM"],                              
    "baseUrl": ".",
    "paths": {"@/*": ["src/*"]},
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "ts-node": {
    "files": true
  }
}
